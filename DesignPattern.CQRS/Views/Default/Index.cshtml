@using DesignPattern.CQRS.CQRSPattern.Results
@model List<GetProductQueryResult>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
   <br />
   <table class="table table-bordered">

       <tr>
           <td>#</td>
           <td>Ürün</td>
           <td>Stok Sayısı</td>
           <td>Fiyatı</td>
           <td>Açıklaması</td>
           <td>Durumu</td>
           <td></td>
           <td></td>
           <td></td>
       </tr>
       @foreach (var item in Model)
        {
            
       
       <tr>
           <td>@item.ProductID</td>
           <td>@item.Name</td>
           <td>@item.Stock</td>
           <td>@item.Price TL</td>
           <td>@item.Description</td>
           <td>@item.Status</td>
                <td>
                    <a href="/Default/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a>
                </td>
                <td>
                    <a href="/Default/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a>

                </td>
                <td>
                    <a href="/Default/GetProductById/@item.ProductID" class="btn btn-warning">Getir</a>

                </td>
       </tr>
        }
   </table>
   <a href="/Default/AddProduct" class="btn btn-primary">Yeni Ürün Girişi</a>
</div>