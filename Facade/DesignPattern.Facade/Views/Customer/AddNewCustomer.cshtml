@using DesignPattern.Facade.DAL
@model Customer
@{
    ViewData["Title"] = "AddNewCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni Müşteri Girişi</h1>

<form method="post">
    <label>Müşteri Adı</label>
    <input type="text" asp-for="CustomerName" class="form-control" />
    <br />
    <label>Müşteri Soyadı</label>
    <input type="text" asp-for="CustomerSurname" class="form-control" />
    <br />
    <label>Müşteri Adresi</label>
    <input type="text" asp-for="CustomerAdress" class="form-control" />
    <br />
    <label>Müşteri Şehiri</label>
    <input type="text" asp-for="CustomerCity" class="form-control" />
    <br />

    <button class="btn btn-success">Kaydet</button>
</form>