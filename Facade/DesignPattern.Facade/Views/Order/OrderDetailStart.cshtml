@using DesignPattern.Facade.DAL
@model OrderDetail
@{
    ViewData["Title"] = "OrderStart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-control-lg">
    <label>Müşteri ID</label>
    <input type="text" class="form-control" asp-for="CustomerID" />
    <br />
    <label>Ürün ID</label>
    <input type="text" class="form-control" asp-for="ProductID" />
    <br />
    <label>Sipariş ID</label>
    <input type="text" class="form-control" asp-for="OrderID" />
    <br />

    <label>Ürün Sayısı</label>
    <input type="text" class="form-control" asp-for="ProductCount" />
    <br />
    <label>Ürün Fiyatı</label>
    <input type="text" class="form-control" asp-for="ProductPrice" />
    <br />
    <button class="btn btn-danger">Kaydet</button>

</form>

