@using DesignPattern.Mediator.Mediator.Results
@model List<GetAllProductQueryResult>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<table class="table table-bordered">
    <tr>
        <th>Ürün Adı</th>
        <th>Fiyatı</th>
        <th>Stok Sayısı</th>
        <th>Stok Türü</th>
        <th>Kategorisi</th>
        <th></th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.ProductPrice</td>
            <td>@item.ProductStock</td>
            <td>@item.ProductStockType</td>
            <td>@item.ProductCategory</td>

            <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Product/AddProduct/" class="btn btn-dark">Ekle</a>