@using RepositoryDesignPattern.EntityLayer.Concrete
@model List<Product>
@{
    Layout = null;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Ürün Stoğu</th>
        <th>Ürün Fiyatı</th>
        <th>Ürün Kategorisi</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {


        <tr>
            <td>@item.ProductID</td>
            <td>@item.ProductName</td>
            <td>@item.ProductStock</td>
            <td>@item.ProductPrice</td>
            <td>@item.ProductPrice</td>
            <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<td><a href="/Product/AddProduct/" class="btn btn-primary">Ekle</a></td>
